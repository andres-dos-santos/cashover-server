generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  id          String   @id @default(uuid())
  name        String
  description String
  doc         String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?

  @@map("companies")
}

model Group {
  id           String @id @default(uuid())
  name         String @unique
  shortName    String
  passwordHash String

  refreshToken RefreshToken[]
  companies    Company[]

  @@map("groups")
}

model RefreshToken {
  id        String @id @default(uuid())
  expiresIn Int

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  @@map("refreshToken")
}
