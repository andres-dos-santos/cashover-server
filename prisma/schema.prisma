generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  id          String   @id @default(uuid())
  name        String
  description String
  doc         String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  groupId     String?
  group       Group?   @relation(fields: [groupId], references: [id])

  @@map("companies")
}

model Group {
  id           String         @id @default(uuid())
  name         String         @unique
  shortName    String
  passwordHash String
  companies    Company[]
  refreshToken RefreshToken[]

  @@map("groups")
}

model RefreshToken {
  id        String @id @default(uuid())
  expiresIn Int
  groupId   String
  group     Group  @relation(fields: [groupId], references: [id])

  @@map("refreshToken")
}
